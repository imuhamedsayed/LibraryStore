@model BookStore.BL.Models.BorrowBookVM
@{
    ViewData["Title"] = "Borrow";

}



<form asp-action="Borrow" asp-controller="Books" asp-mod method="post" style="margin-top:50px;">
    <div class="row justify-content-center">
        <div class="form-group col-md-4">
            <label for="BookCode">Book Code</label>
            <input type="text" class="form-control" value="@ViewBag.Book.BookCode" asp-for="BookCode" readonly>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-md-4">
            <label for="BookName">Book Name</label>
            <input type="text" class="form-control" value="@ViewBag.Book.BookName" asp-for="BookName" readonly>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-md-4">
            <label for="BorrowerCode">Enter Member Code</label>
            <input type="text" class="form-control" asp-for="BorrowerCode" placeholder="Enter Member Code">
            <span asp-validation-for="BorrowerCode" class="text-danger"></span>
        </div>
    </div>

    </>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-primary" value="Borrow" />
        <input type="reset" class="btn btn-danger" value="Clear" />
    </center>

</form>

