@model BookStore.BL.Models.CreateBookVm
@{
    ViewData["Title"] = "Delete";
 
}

<br />
<br />
<a asp-action="Index" asp-controller="Books" class="btn btn-primary">Back To Books</a>

<br />
<br />

<form asp-action="ConfirmDelete" asp-controller="Books" method="post">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="row">
        <div class="form-group col-md-4">
            <label for="BookName">Book Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Book Name" disabled>
          
        </div>
        <div class="form-group col-md-4">
            <label for="BookCode">Book Code</label>
            <input type="text" class="form-control" asp-for="Code" placeholder="Enter Book Code" disabled>
         
        </div>
        <div class="form-group col-md-4">
            <label for="BookStock">Book Stock</label>
            <input type="text" class="form-control" asp-for="Stock" placeholder="Enter Book Stock" disabled>
          
        </div>
    </div>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-danger" value="Confirm Delete" />
   
    </center>

</form>

