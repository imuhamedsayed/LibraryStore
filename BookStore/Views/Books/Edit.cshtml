@model BookStore.BL.Models.UpdateBookVm
@{
    ViewData["Title"] = "Edit";
   
}

<br />
<br />
<a asp-action="Index" asp-controller="Books" class="btn btn-primary">Back To Books</a>

<br />
<br />

<form asp-action="Edit" asp-controller="Books" method="post">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="row">
        <div class="form-group col-md-4">
            <label for="BookName">Book Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Book Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="BookCode">Book Code</label>
            <input type="text" class="form-control" asp-for="Code" placeholder="Enter Book Code" readonly>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="BookStock">Book Stock</label>
            <input type="text" class="form-control" asp-for="Stock" placeholder="Enter Book Stock" readonly>
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-primary" value="Update" />
        <input type="reset" class="btn btn-danger" value="Old Values" />
    </center>

</form>


