@model IEnumerable<BookStore.BL.Models.CreateBookVm>
@{
    ViewData["Title"] = "Book Store";

}

<br />
<br />
<a asp-action="Create" asp-controller="Books" class="btn btn-success">+ Add New Book</a>

<br />
<br />

<table class="table table-striped table-hover text-center">

    <thead>
        <tr>
            <th class="text-center"> Code</th>
            <th class="text-center"> Name</th>
            <th class="text-center"> Stock</th>
            <th class="text-center"> Active Reservations</th>
            <th class="text-center"> Total Reservations</th>
            <th class="text-center">Operations</th>

        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.Stock</td>
            <td>@item.ActiveReserved</td>

            <td>@item.TotalReservations</td>
            <td>
                @if (item.IsReservable)
                {
                    <a asp-action="Borrow" asp-controller="Books" asp-route-id="@item.Id" class="btn btn-success">Borrow</a>

                }
                else
                {
                    <button  class="btn btn-danger" disabled>Out Of Stock</button>

                }
                <a asp-action="Edit" asp-controller="Books" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                <a asp-action="Delete" asp-controller="Books" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

            </td>
        </tr>
        }

    </tbody>
</table>