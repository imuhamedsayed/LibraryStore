@model BookStore.BL.Models.CreateBorrowerVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<br />
<br />
<a asp-action="Index" asp-controller="Members" class="btn btn-primary">Back To Members</a>

<br />
<br />

<form asp-action="Create" asp-controller="Members" method="post">
    <div class="row justify-content-center">
        <div class="form-group col-md-4">
            <label for="BorrowerName">Member Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Member Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="BorrowerCode">Member Code</label>
            <input type="text" class="form-control" asp-for="Code" placeholder="Enter Member Code">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        
    </div>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-primary" value="Add" />
        <input type="reset" class="btn btn-danger" value="Clear" />
    </center>

</form>