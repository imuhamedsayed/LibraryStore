@model BookStore.BL.Models.CreateBorrowerVM
@{
    ViewData["Title"] = "Delete";

}

<br />
<br />
<a asp-action="Index" asp-controller="Members" class="btn btn-primary">Back To Members</a>

<br />
<br />

<form asp-action="ConfirmDelete" asp-controller="Members" method="post">
    <input type="hidden" class="form-control" asp-for="Id">
    <div class="row">
        <div class="form-group col-md-4">
            <label for="BorrowerName">Member Name</label>
            <input type="text" class="form-control" asp-for="Name" disabled>

        </div>
        <div class="form-group col-md-4">
            <label for="BorrowerCode">Book Code</label>
            <input type="text" class="form-control" asp-for="Code"  disabled>

        </div>
      
    </div>

    <br />
    <br />
    <center>
        <input type="submit" class="btn btn-danger" value="Confirm Delete" />

    </center>

</form>

