@model IEnumerable<BookStore.BL.Models.CreateBorrowerVM>

@{
    ViewData["Title"] = "Members";
}

<br />
<br />
<a asp-action="Create" asp-controller="Members" class="btn btn-primary">+ Add New Member</a>

<br />
<br />

<table class="table table-striped table-hover text-center">

    <thead>
        <tr>
            <th class="text-center">Code</th>
            <th class="text-center">Member Name</th>
     
            <th class="text-center">Operations</th>

        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                
                
                
               
                <td>
                    <a asp-action="BorrowedBooks" asp-controller="Members" asp-route-id="@item.Id" class="btn btn-success">Borrowed Book</a>
                    <a asp-action="Edit" asp-controller="Members" asp-route-id="@item.Id" class="btn btn-info">Update</a>
                    <a asp-action="Delete" asp-controller="Members" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }

    </tbody>
</table>
